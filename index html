  <script>
    // Small helper: animate elements on scroll
    const obs = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){e.target.classList.add('show')}
      })
    },{threshold:0.12})
    document.querySelectorAll('.anim-up').forEach(el=>obs.observe(el))

    // Newsletter modal / flow (simple)
    function newsletterSubmit(e){e.preventDefault();const em=document.getElementById('emailInput').value;alert('Thanks! '+em+' — check your inbox for 10% off.');document.getElementById('emailInput').value=''}

    // Cart drawer
    const cartDrawer=document.getElementById('cartDrawer');
    document.getElementById('openCart').addEventListener('click',()=>{cartDrawer.classList.toggle('open');cartDrawer.setAttribute('aria-hidden', cartDrawer.classList.contains('open') ? 'false' : 'true')})

    // Shop now scroll
    document.getElementById('shopNow').addEventListener('click',()=>{document.getElementById('products').scrollIntoView({behavior:'smooth'})})

    // Simple add-to-cart for demo (no backend)
    document.querySelectorAll('.product .btn-primary').forEach((btn,i)=>{
      btn.addEventListener('click',()=>{
        addToCart({title:document.querySelectorAll('.product h3')[i].innerText,price:document.querySelectorAll('.product .price')[i].innerText})
      })
    })
    function addToCart(item){const c=document.getElementById('cartItems');if(c.innerText==='No items yet')c.innerText='';const div=document.createElement('div');div.style.padding='8px 0';div.style.borderBottom='1px solid rgba(16,24,40,0.04)';div.innerText=item.title+' — '+item.price;c.appendChild(div);document.getElementById('openCart').innerText='Cart ('+c.children.length+')';}

    // small polish: make header shrink on scroll
    const header=document.querySelector('.nav');let lastScroll=0;window.addEventListener('scroll',()=>{const s=window.scrollY;if(s>80)header.style.height='64px';else header.style.height='72px';lastScroll=s})

    // Accessibility: keyboard trap for cart (basic)
    document.addEventListener('keydown',e=>{if(e.key==='Escape'){cartDrawer.classList.remove('open')}})
  </script>
